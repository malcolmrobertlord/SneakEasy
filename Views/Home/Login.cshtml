@{
    ViewData["Title"] = "Login";
}

@model LoginUser

<div style="background-color: white; padding: 20px; height: 600px; border: 4px solid black;">
    <div class="d-flex justify-content-between">
        <h1>Please login below:</h1>
        <a href="/users/register" class="btn btn-primary" style="height: 40px;">Register</a>
    </div>
    <div class="w-50">

    <form action="/users/loggingIn" method="post">
        <div class="form-group">
            <label for="LoginEmail">Email</label>
            <input asp-for="LoginEmail" class="form-control">
            <span asp-validation-for="LoginEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="LoginPassword">Password</label>
            <input asp-for="LoginPassword" class="form-control">
            <span asp-validation-for="LoginPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-success">
        </div>
    </form>
    </div>
</div>