@{
    ViewData["Title"] = "@ViewBag.Sneaker.Name";
}

<div class="container1 p-3" style="background-color: white; height: 800px; border: 4px solid black;">

    <h2>@ViewBag.Sneaker.Name</h2>

    <div class="d-flex justify-content-center">
        <div class="m-2">
            <img src="@ViewBag.Sneaker.PhotoURL" alt="@ViewBag.Sneaker.Name" style="width: 300px; height: 300px;">
            <h3>Sold by: @ViewBag.Sneaker.Seller.Name</h3>
            <h3>Brand: @ViewBag.Sneaker.Brand</h3>
            <h3>Size: @ViewBag.Sneaker.Size</h3>
            <h4>$@ViewBag.Sneaker.Price</h4>
                @if(ViewBag.Sneaker.UserId == ViewBag.User)
                {
                    <a href="/sneaker/delete/@ViewBag.Sneaker.SneakerId" class="btn btn-danger">Delete</a>
                    <a href="/sneaker/edit/@ViewBag.Sneaker.SneakerId" class="btn btn-info">Edit</a>
                } else {
                    <form action="/sneaker/buy/@ViewBag.Sneaker.SneakerId" method="post">
                        <input type="submit" value="Buy" class="btn btn-success">
                    </form>
                }
        </div>
    </div>
</div>
